<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<a class="newData" href="/admin/armor/new">Create a new armor piece</a>
		<table>
			<tr>
				<th>ID</th>
				<th>Picture</th>
				<th>Name</th>
				<th>Physical Defense</th>
				<th>Elemental Defense</th>
				<th>Resistance</th>
				<th>Poise</th>
				<th>Durability</th>
				<th>Weight</th>
				<th>Armor Slot</th>
				<th>Notes</th>
				<th>Edit / Delete</th>
			</tr>
			<% results.forEach(result => { %>
			<tr>
				<td>
					<%= result.id %>
				</td>
				<td>
					<img class="itemImg" src="../images/<%= result.picture %>" alt="">
				</td>
				<td>
					<%= result.name %>
				</td>
				<td>
					<%= result.defense_physical %>
				</td>
				<td>
					<%= result.defense_elemental %>
				</td>
				<td>
					<%= result.resistance %>
				</td>
				<td>
					<%= result.poise %>
				</td>
				<td>
					<%= result.durability %>
				</td>
				<td>
					<%= result.weight %>
				</td>
				<td>
					<%= result.armor_slot %>
				</td>
				<td>
					<% if (!result.notes){%>
					-
					<%} else{%>
					<%= result.notes %>
					<%} %>
				</td>
				<td>
					<div>
						<a href="/admin/armor/edit/<%= result.id %>">
							<p>Edit</p><i class="fas fa-edit"></i>
						</a>
						<hr>
						<a href="/admin/armor/delete/<%= result.id %>">
							<p>Delete</p><i class="fas fa-trash"></i>
						</a>
					</div>
				</td>
			</tr>
			<% }); %>
		</table>
	</section>
</main>
</body>

</html>