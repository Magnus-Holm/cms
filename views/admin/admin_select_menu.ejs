<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<a class="newData" href="/admin/menu/new">Create a new menu link</a>
		<table>
			<tr>
				<th>ID</th>
				<th>Menu Name</th>
				<th>Web Link</th>
				<th>Position</th>
				<th>Edit / Delete</th>
			</tr>
			<% results.forEach(result => { %>
			<tr>
				<td>
					<%= result.id %>
				</td>
				<td>
					<%= result.name %>
				</td>
				<td>
					<%= result.link %>
				</td>
				<td>
					<%= result.position %>
				</td>
				<td>
					<div>
						<a href="/admin/menu/edit/<%= result.id %>">
							<p>Edit</p><i class="fas fa-edit"></i>
						</a>
						<hr>
						<a href="/admin/menu/delete/<%= result.id %>">
							<p>Delete</p><i class="fas fa-trash"></i>
						</a>
					</div>
				</td>
			</tr>
			<% }); %>
		</table>
	</section>
</main>
</body>

</html>