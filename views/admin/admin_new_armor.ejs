<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<form action="/admin/armor/new" method="POST" enctype="multipart/form-data">
			<label for="name">Item Name</label>
			<input type="text" id="name" name="name">

			<label for="picture">Picture</label>
			<input type="file" id="picture" name="picture">

			<img class="itemImg" src="" alt="">

			<label for="physical">Physical Defense</label>
			<input type="text" id="physical" name="physical" value="0/0/0/0">


			<label for="elemental">Elemental Defense</label>
			<input type="text" id="elemental" name="elemental" value="0/0/0/0">

			<label for="resistance">Resistance</label>
			<input type="text" id="resistance" name="resistance" value="0/0/0/0">


			<label for="poise">Poise</label>
			<input type="text" id="poise" name="poise" value="0">


			<label for="durability">Durability</label>
			<input type="text" id="durability" name="durability" value="0">


			<label for="weight">Weight</label>
			<input type="text" id="weight" name="weight" value="0">


			<label for="type">Armor Slot</label>
			<select name="type" id="type">
				<% armor_slots.forEach(type => { %>
				<option value="<%= type.id %>" <% if (result.armor_slot==type.id ){%> selected
					<%} %>>
					<%= type.slot_name %>
				</option>
				<% }); %>
			</select>

			<label for="notes">Notes</label>
			<textarea name="notes" id="notes" cols="30" rows="10"><%= result.notes %></textarea>

			<button type="submit">Create</button>
		</form>
	</section>
</main>
</body>

</html>