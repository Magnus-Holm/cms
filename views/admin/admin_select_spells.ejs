<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<a class="newData" href="/admin/spell/new">Create a new spell</a>
		<table>
			<tr>
				<th>ID</th>
				<th>Picture</th>
				<th>Name</th>
				<th>Effect</th>
				<th>Uses</th>
				<th>Attunement Slots</th>
				<th>Spell Type</th>
				<th>Faith Requirement</th>
				<th>Intelligence Requirement</th>
				<th>Notes</th>
				<th>Edit / Delete</th>
			</tr>
			<% results.forEach(result => { %>
			<tr>
				<td>
					<%= result.id %>
				</td>
				<td>
					<img class="itemImg" src="../images/<%= result.picture %>" alt="">
				</td>
				<td>
					<%= result.name %>
				</td>
				<td>
					<%= result.effect %>
				</td>
				<td>
					<%= result.uses %>
				</td>
				<td>
					<%= result.slots %>
				</td>
				<td>
					<%= result.spell_type %>
				</td>
				<td>
					<%= result.faith_need %>
				</td>
				<td>
					<%= result.int_need %>
				</td>
				<td>
					<% if (!result.notes){%>
					-
					<%} else{%>
					<%= result.notes %>
					<%} %>
				</td>
				<td>
					<div>
						<a href="/admin/spell/edit/<%= result.id %>">
							<p>Edit</p><i class="fas fa-edit"></i>
						</a>
						<hr>
						<a href="/admin/spell/delete/<%= result.id %>">
							<p>Delete</p><i class="fas fa-trash"></i>
						</a>
					</div>
				</td>
			</tr>
			<% }); %>
		</table>
	</section>
</main>
</body>

</html>