<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<a class="newData" href="/admin/shield/new">Create a new shield</a>
		<table>
			<tr>
				<th>ID</th>
				<th>Picture</th>
				<th>Name</th>
				<th>Damage</th>
				<th>AUX effect</th>
				<th>Critical</th>
				<th>Damage Reduction</th>
				<th>Durability</th>
				<th>Stability</th>
				<th>Weight</th>
				<th>Stat requirements</th>
				<th>Stat Scaling</th>
				<th>Type</th>
				<th>Notes</th>
				<th>Edit / Delete</th>
			</tr>
			<% results.forEach(result => { %>
			<tr>
				<td>
					<%= result.id %>
				</td>
				<td>
					<img class="itemImg" src="../images/<%= result.picture %>" alt="">
				</td>
				<td>
					<%= result.name %>
				</td>
				<td>
					<%= result.damage %>
				</td>
				<td>
					<% if (!result.aux_effect){%>
					-
					<%} else{%>
					<%= result.aux_effect %>
					<%} %>
				</td>
				<td>
					<% if (!result.critical){%>
					-
					<%} else{%>
					<%= result.critical %>
					<%} %>
				</td>
				<td>
					<%= result.damage_reduction %>
				</td>
				<td>
					<%= result.durability %>
				</td>
				<td>
					<%= result.stability %>
				</td>
				<td>
					<%= result.weight %>
				</td>
				<td>
					<%= result.stats_req %>
				</td>
				<td>
					<%= result.stats_scale %>
				</td>
				<td>
					<%= result.shield_size %>
				</td>
				<td>
					<% if (!result.notes){%>
					-
					<%} else{%>
					<%= result.notes %>
					<%} %>
				</td>
				<td>
					<div>
						<a href="/admin/shield/edit/<%= result.id %>">
							<p>Edit</p><i class="fas fa-edit"></i>
						</a>
						<hr>
						<a href="/admin/shield/delete/<%= result.id %>">
							<p>Delete</p><i class="fas fa-trash"></i>
						</a>
					</div>
				</td>
			</tr>
			<% }); %>
		</table>
	</section>
</main>
</body>

</html>