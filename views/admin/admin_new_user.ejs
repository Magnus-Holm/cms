<% include admin-partials/admin_head.ejs %>
<% include admin-partials/headerAdmin.ejs %>
<main role="main">
	<% include admin-partials/navAdmin.ejs %>
	<section>
		<form action="/admin/user/new" method="POST" enctype="multipart/form-data">
			<label for="username">Username</label>
			<input type="text" id="username" name="username">

			<label for="picture">Picture</label>
			<input type="file" id="picture" name="picture">

			<img class="itemImg" src="" alt="">

			<label for="password">Password</label>
			<input type="text" id="password" name="password">

			<label for="rank">Rank</label>
			<select name="rank" id="rank">
				<% rank.forEach(rank => { %>
				<option value="<%= rank.id %>" <% if (result.rank_id==rank.id ){%> selected
					<%} %>>
					<%= rank.name %>
				</option>
				<% }); %>
			</select>

			<button type="submit">Create</button>
		</form>
	</section>
</main>
</body>

</html>